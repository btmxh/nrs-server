doctype html
html
  head
    title='NRS listing'

    link(rel='stylesheet', href='/stylesheets/style.css')
  body 
    div(id='container', style='height: 100%')
    script(src='https://cdn.jsdelivr.net/npm/handsontable@11/dist/handsontable.full.min.js')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/handsontable@11/dist/handsontable.full.min.css')
    script(type="text/javascript", defer).
      setTimeout(() => {
        let cont = document.getElementById('container')
        cont.innerHtml = ''
        cont.className = ''
        Handsontable(cont, {
          data: !{JSON.stringify(data)},
          rowHeaders: true,
          colHeaders: !{JSON.stringify(fields)},
          columnSorting: true,
          dropdownMenu: true,
          filters: true,
          width: '100%',
          licenseKey: 'non-commercial-and-evaluation',
          manualColumnResize: true,
        })
      }, 0);

